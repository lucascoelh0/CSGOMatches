<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_24"
    android:backgroundTint="@color/color_secondary"
    app:cardCornerRadius="@dimen/spacing_24">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.lucascoelho.csgomatches.customview.MyMatchTimeTextView
            android:id="@+id/textView_match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_match_time_text_view_state"
            android:padding="@dimen/spacing_12"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_xs"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:myMatchTimeTextViewIsLive="true"
            tools:text="@string/now"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView_first_team"
            android:layout_width="@dimen/spacing_80"
            android:layout_height="@dimen/spacing_80"
            android:layout_marginTop="@dimen/spacing_16"
            android:scaleType="fitXY"
            android:src="@drawable/round_bg"
            app:layout_constraintEnd_toStartOf="@id/textView_vs"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_match_time" />

        <TextView
            android:id="@+id/textView_first_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_16"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/view_separator"
            app:layout_constraintEnd_toEndOf="@id/imageView_first_team"
            app:layout_constraintStart_toStartOf="@id/imageView_first_team"
            app:layout_constraintTop_toBottomOf="@id/imageView_first_team"
            tools:text="Time 1" />

        <TextView
            android:id="@+id/textView_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_24"
            android:layout_marginEnd="@dimen/spacing_24"
            android:text="@string/vs"
            android:textColor="@color/label_01"
            app:layout_constraintBottom_toBottomOf="@id/textView_first_team_name"
            app:layout_constraintEnd_toStartOf="@id/imageView_second_team"
            app:layout_constraintStart_toEndOf="@id/imageView_first_team"
            app:layout_constraintTop_toTopOf="@id/imageView_first_team" />

        <ImageView
            android:id="@+id/imageView_second_team"
            android:layout_width="@dimen/spacing_80"
            android:layout_height="@dimen/spacing_80"
            android:layout_marginTop="@dimen/spacing_16"
            android:scaleType="fitXY"
            android:src="@drawable/round_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView_vs"
            app:layout_constraintTop_toBottomOf="@+id/textView_match_time" />

        <TextView
            android:id="@+id/textView_second_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_16"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/view_separator"
            app:layout_constraintEnd_toEndOf="@id/imageView_second_team"
            app:layout_constraintStart_toStartOf="@id/imageView_second_team"
            app:layout_constraintTop_toBottomOf="@id/imageView_second_team"
            tools:text="Time 2" />

        <View
            android:id="@+id/view_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_1"
            android:layout_marginBottom="@dimen/spacing_16"
            android:background="@color/color_tertiary"
            app:layout_constraintBottom_toTopOf="@id/imageView_league" />

        <ImageView
            android:id="@+id/imageView_league"
            android:layout_width="@dimen/spacing_24"
            android:layout_height="@dimen/spacing_24"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginBottom="@dimen/spacing_16"
            android:scaleType="fitXY"
            android:src="@drawable/round_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_leagueName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_xs"
            app:layout_constraintBottom_toBottomOf="@id/imageView_league"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView_league"
            app:layout_constraintTop_toTopOf="@id/imageView_league"
            tools:text="League + serie" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>