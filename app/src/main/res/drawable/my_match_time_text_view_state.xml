<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:myMatchTimeTextViewIsLive="true">
        <shape>
            <solid android:color="@color/color_live"/>
            <corners android:bottomLeftRadius="@dimen/spacing_24"/>
        </shape>
    </item>
    <item app:myMatchTimeTextViewIsLive="false">
        <shape>
            <solid android:color="@color/color_not_live"/>
            <corners android:bottomLeftRadius="@dimen/spacing_24"/>
        </shape>
    </item>
</selector>